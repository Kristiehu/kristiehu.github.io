---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
  <nav class="nav">
    <div class="brand">
      <a href="/">{SITE_TITLE}</a>
    </div>

    <button class="menu-btn" type="button" aria-expanded="false" aria-controls="site-menu">
      <span class="menu-icon" aria-hidden="true"></span>
      <span class="menu-text">Menu</span>
    </button>


<div class="internal-links" id="site-menu">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Research & Work</HeaderLink>
      <HeaderLink href="/teaching">Teaching</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>

    <div class="social-links">
      {Astro.slots.default}
    </div>
  </nav>
</header>


<script>
  const header = document.querySelector('.site-header');
const btn = header?.querySelector('.menu-btn');
const menu = header?.querySelector('#site-menu');

  function closeMenu() {
    if (!btn || !menu) return;
    btn.setAttribute('aria-expanded', 'false');
    menu.classList.remove('is-open');
  }

  function toggleMenu() {
    if (!btn || !menu) return;
    const open = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!open));
    menu.classList.toggle('is-open', !open);
  }

  if (btn && menu) {
    closeMenu(); 

    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleMenu();
    });

    menu.querySelectorAll('a').forEach(a => a.addEventListener('click', closeMenu));
    document.addEventListener('click', closeMenu);
    document.addEventListener('astro:page-load', closeMenu);
    window.addEventListener('resize', () => {
      if (window.innerWidth > 720) closeMenu();
    });
  }
  
</script>



<style>
  /* Desktop default */
.menu-btn { display: none; }

.site-header {
  position: sticky;
  top: 0;
  z-index: 50;
  background: white;
  border-bottom: 1px solid rgba(0,0,0,0.06);
}
.site-header{
  background: rgba(255,255,255,0.75);
  backdrop-filter: blur(12px);
}


@media (min-width: 721px) {
  .site-header .nav a {
    padding: 0.6rem 0.35rem;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }

  .site-header .nav a.active {
    border-bottom-color: var(--accent);
  }
}

.nav {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0.75rem 1.25rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand a {
  font-size: 1.05rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  text-decoration: none;
  color: var(--black);
}

.internal-links {
  display: flex;
  gap: 1.25rem;
  font-size: 0.9rem;
}

.internal-links a {
  opacity: 0.75;
  text-decoration: none;
}
.social-links,
.social-links a {
  display: flex;
}

/* Mobile */
@media (max-width: 720px) {
  .nav { position: relative; }

  .menu-btn{
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;

    padding: 0.55rem 0.9rem;

    border-radius: 999px;

    background: rgba(210, 230, 255, 0.25);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);

    border: 1px solid rgba(180, 210, 255, 0.6);

    color: #2f4f6f;

    font-size: 0.9rem;
    font-weight: 500;

    transition: all 200ms ease;
  }

  .menu-btn:hover{
    background: rgba(190, 220, 255, 0.35);
    border-color: rgba(160, 200, 255, 0.8);
    box-shadow: 0 0 12px rgba(150, 200, 255, 0.4);
  }

  btn.classList.toggle("is-active");
  .menu-btn.is-active{
    background: rgba(180, 215, 255, 0.45);
    border-color: rgba(140, 190, 255, 0.9);
    box-shadow: 0 0 16px rgba(120, 180, 255, 0.6);
  }

  .menu-icon{
    width: 16px;
    height: 12px;
    position: relative;
    display: inline-block;
  }

  .menu-icon::before,
  .menu-icon::after{
    content:"";
    position:absolute;
    left:0; right:0;
    height:2px;
    background: rgba(0,0,0,0.65);
    border-radius: 2px;
  }

  .menu-icon::before{ top:0; }
  .menu-icon::after{ bottom:0; }

  /* Default closed */
  .internal-links{ display: none; }

  /* Open state */
  .internal-links.is-open{
    display: flex;
    position: absolute;
    right: 12px;
    top: 54px;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 200px;
    padding: 0.5rem;
    background: rgba(255,255,255,0.96);
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 14px;
    box-shadow: 0 16px 40px rgba(0,0,0,0.14);
    z-index: 9999;
  }

  .internal-links.is-open a{ 
    width: 100%;
    overflow: hidden;
  }

  .internal-links.is-open a{
    position: relative;
    display: flex;
    align-items: center;
    padding: 0.7rem 0.9rem 0.7rem 1.2rem;
    border-radius: 12px;
    text-decoration: none;
  }
  .social-links{ display: none; }
}

.internal-links a{
  padding: 0.7rem 1rem;
  border-radius: 12px;
  text-decoration: none;
  color: #334d66;
  transition: all 160ms ease;
}

.internal-links a:hover{
  background: rgba(190, 220, 255, 0.25);
}

.internal-links a.active{
  background: rgba(170, 210, 255, 0.3);
  position: relative;
}

.internal-links a.active::before{
  content: "";
  position: absolute;
  left: 8px;
  top: 10px;
  bottom: 10px;

  width: 3px;
  border-radius: 999px;
  background: linear-gradient(
    to bottom,
    #9cd6ff,
    #4aa3ff
  );
}


@media (max-width: 720px) {

  .internal-links.is-open{
  display: flex;
  position: absolute;
  right: 12px;
  top: 54px;

  flex-direction: column;
  gap: 0.4rem;

  min-width: 220px;
  padding: 0.6rem;

  background: rgba(220, 235, 255, 0.35);
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);

  border: 1px solid rgba(180, 210, 255, 0.6);
  border-radius: 16px;

  box-shadow: 0 20px 40px rgba(80, 140, 200, 0.25);

  z-index: 9999;
}

}

@media (max-width: 720px) {
  .internal-links.is-open {
    box-sizing: border-box;
  }

  .internal-links.is-open a {
    box-sizing: border-box;
    max-width: 100%;
  }
}


</style>
