---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
  <nav class="nav">
    <div class="brand">
      <a href="/">{SITE_TITLE}</a>
    </div>

    <button class="menu-btn" type="button" aria-expanded="false" aria-controls="site-menu">
      <span class="menu-icon" aria-hidden="true"></span>
      <span class="menu-text">Menu</span>
    </button>


<div class="internal-links" id="site-menu">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Research & Work</HeaderLink>
      <HeaderLink href="/teaching">Teaching</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>

    <div class="social-links">
      {Astro.slots.default}
    </div>
  </nav>
</header>


<script>
  const header = document.querySelector('.site-header');
const btn = header?.querySelector('.menu-btn');
const menu = header?.querySelector('#site-menu');

  function closeMenu() {
    if (!btn || !menu) return;
    btn.setAttribute('aria-expanded', 'false');
    menu.classList.remove('is-open');
  }

  function toggleMenu() {
    if (!btn || !menu) return;
    const open = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!open));
    menu.classList.toggle('is-open', !open);
  }

  if (btn && menu) {
    closeMenu(); 

    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleMenu();
    });

    menu.querySelectorAll('a').forEach(a => a.addEventListener('click', closeMenu));
    document.addEventListener('click', closeMenu);
    document.addEventListener('astro:page-load', closeMenu);
    window.addEventListener('resize', () => {
      if (window.innerWidth > 720) closeMenu();
    });
  }
  
</script>



<style>
  /* Desktop default */
.menu-btn { display: none; }

.site-header {
  position: sticky;
  top: 0;
  z-index: 50;
  background: white;
  border-bottom: 1px solid rgba(0,0,0,0.06);
}

@media (min-width: 721px) {
  .site-header .nav a {
    padding: 0.6rem 0.35rem;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }

  .site-header .nav a.active {
    border-bottom-color: var(--accent);
  }
}

.nav {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0.75rem 1.25rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand a {
  font-size: 1.05rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  text-decoration: none;
  color: var(--black);
}

.internal-links {
  display: flex;
  gap: 1.25rem;
  font-size: 0.9rem;
}

.internal-links a {
  opacity: 0.75;
  text-decoration: none;
}
.social-links,
.social-links a {
  display: flex;
}



/* Mobile */
@media (max-width: 720px) {
  :root{
    /* 雾蓝体系：低饱和、偏灰蓝 */
    --mist-blue: rgba(58, 95, 143, 0.90);      /* 主色 */
    --mist-blue-weak: rgba(58, 95, 143, 0.12); /* hover bg */
    --mist-blue-soft: rgba(58, 95, 143, 0.18); /* active bg */
    --mist-ink: rgba(17, 24, 39, 0.82);        /* 深色文字 */
    --mist-border: rgba(58, 95, 143, 0.18);    /* 边框 */
    --mist-shadow: 0 18px 50px rgba(17, 24, 39, 0.14);
  }

  .nav { position: relative; }

  /* ===== MENU BUTTON ===== */
  .menu-btn{
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
    padding: 0.50rem 0.85rem;
    border-radius: 999px;

    background: rgba(240, 246, 255, 0.78); /* 雾蓝玻璃 */
    border: 1px solid var(--mist-border);
    color: var(--mist-ink);

    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);

    font-size: 0.92rem;
    font-weight: 600;
    letter-spacing: 0.01em;

    transition: transform 160ms ease, background 160ms ease, border-color 160ms ease, box-shadow 160ms ease;
  }

  .menu-btn:hover{
    background: rgba(240, 246, 255, 0.90);
    border-color: rgba(58, 95, 143, 0.26);
    transform: translateY(-1px);
    box-shadow: 0 10px 26px rgba(17, 24, 39, 0.10);
  }

  .menu-btn:active{
    transform: translateY(0);
  }

  .menu-btn:focus-visible{
    outline: none;
    box-shadow: 0 0 0 4px rgba(58, 95, 143, 0.18);
  }

  /* ===== HAMBURGER → X (using aria-expanded) ===== */
  .menu-icon{
    width: 18px;
    height: 12px;
    position: relative;
    display: inline-block;
  }

  .menu-icon::before,
  .menu-icon::after{
    content:"";
    position:absolute;
    left:0; right:0;
    height:2px;
    background: var(--mist-blue);
    border-radius: 999px;
    transition: transform 180ms ease, top 180ms ease, bottom 180ms ease, opacity 180ms ease;
  }

  .menu-icon::before{ top:0; }
  .menu-icon::after{ bottom:0; }

  /* Middle line */
  .menu-icon span{
    display:none;
  }

  /* When open: turn into X */
  .menu-btn[aria-expanded="true"] .menu-icon::before{
    top: 5px;
    transform: rotate(45deg);
  }
  .menu-btn[aria-expanded="true"] .menu-icon::after{
    bottom: 5px;
    transform: rotate(-45deg);
  }

  /* Default closed */
  .internal-links{ display: none; }

  /* ===== DROPDOWN ===== */
  .internal-links.is-open{
    display: flex;
    position: absolute;
    right: 12px;
    top: 54px;
    flex-direction: column;
    gap: 0.3rem;

    min-width: 210px;
    padding: 0.55rem;

    background: rgba(248, 251, 255, 0.92);
    border: 1px solid rgba(58, 95, 143, 0.16);
    border-radius: 16px;

    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);

    box-shadow: var(--mist-shadow);
    z-index: 9999;

    transform-origin: top right;
    animation: menuPop 140ms ease-out;
  }

  @keyframes menuPop{
    from { opacity: 0; transform: translateY(-6px) scale(0.98); }
    to   { opacity: 1; transform: translateY(0) scale(1); }
  }

  .internal-links.is-open a{
    position: relative;
    display: flex;
    align-items: center;

    width: 100%;
    padding: 0.72rem 0.95rem 0.72rem 1.05rem;

    border-radius: 12px;
    text-decoration: none;

    color: rgba(17, 24, 39, 0.82);
    font-weight: 600;
    letter-spacing: 0.01em;

    transition: background 140ms ease, color 140ms ease;
  }

  .internal-links.is-open a:hover{
    background: var(--mist-blue-weak);
    color: rgba(17, 24, 39, 0.92);
  }

  /* Active / current page: 雾蓝高亮条 */
  .internal-links.is-open a.active,
  .internal-links.is-open a[aria-current="page"]{
    background: var(--mist-blue-soft);
  }

  .internal-links.is-open a.active::before,
  .internal-links.is-open a[aria-current="page"]::before{
    content:"";
    position:absolute;
    left: 10px;
    top: 10px;
    bottom: 10px;
    width: 3px;
    border-radius: 999px;
    background: rgba(58, 95, 143, 0.92);
  }

  /* Kill desktop underline style in mobile menu */
  .internal-links a{
    border-bottom: none !important;
  }

  /* social links hidden on mobile (keep your behavior) */
  .social-links{ display: none; }
}

 .menu-btn{ position: relative; z-index: 10001; }

  /* dropdown 不再跟着 nav 跑，用 fixed 锁死在视口右上 */
  .internal-links.is-open{
    position: fixed !important;
    right: 14px !important;
    top: 68px !important; /* 让它在 header 下方 */
    left: auto !important;

    width: min(92vw, 320px) !important;  /* 防止太宽导致“探出屏幕” */
    max-width: 320px !important;

    box-sizing: border-box;
  }

  /* 避免每个 item 被拉成一整块大阴影 */
  .internal-links.is-open a{
    width: 100%;
    box-sizing: border-box;
  }
}



</style>
