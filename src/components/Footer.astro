<style>
  .site-footer {
    margin-top: clamp(2rem, 6vh, 4rem);
    padding: 1.1rem 1rem 2.2rem;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }

  .footer-text {
    margin: 0;
    font-size: 0.78rem;
    line-height: 1.35;
    letter-spacing: 0.2px;
    opacity: 0.78;
    font-variant-numeric: tabular-nums;
  }

  .sep {
    margin: 0 0.35rem;
    opacity: 0.55;
  }

  .footer-text a {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.15s ease, opacity 0.15s ease;
  }

  .footer-text a:hover {
    border-bottom-color: currentColor;
    opacity: 0.95;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 0.55rem;
  }

  .social-links a {
    padding: 0.35rem;
    border-radius: 6px;
    color: rgb(var(--gray));
    line-height: 0;
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  .social-links svg {
    width: 20px;
    height: 20px;
    opacity: 0.7;
    transition: opacity 0.18s ease, transform 0.18s ease;
  }

  .social-links a:hover svg {
    opacity: 1;
    transform: translateY(-1px);
  }
</style>
