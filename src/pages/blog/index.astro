---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			*, *::before, *::after { box-sizing: border-box; }

			html, body { width: 100%; max-width: 100%; overflow-x: clip; } /* clip 不行就用 hidden */

						/* Fix invalid CSS */
			h1 { font-weight: 800; }

			main {
			width: 100%;
			max-width: 1100px;
			margin: 0 auto;
			padding: 2.5rem 1rem;
			box-sizing: border-box; /* double-safe */
			}
			

			section.prose {
			width: 100%;
			}

			/* Card grid */
			ul {
			list-style: none;
			margin: 0;
			padding: 0;

			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
			gap: 1.25rem;
			}

			/* Card */
			ul li a {
			display: grid;
			gap: 0.65rem;
			padding: 0.9rem;
			border-radius: 16px;
			border: 1px solid rgba(0,0,0,0.08);
			background: rgba(255,255,255,0.9);
			text-decoration: none;
			transition: transform 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
			}

			ul li a:hover {
			transform: translateY(-2px);
			box-shadow: 0 10px 30px rgba(0,0,0,0.10);
			border-color: rgba(0,0,0,0.18);
			}

			/* Image */
			ul li img {
			width: 100%;
			height: auto;
			display: block;
			border-radius: 12px;
			aspect-ratio: 16 / 9;
			object-fit: cover;
			}

			/* Text */
			.title {
			margin: 0;
			font-size: 1.05rem;
			line-height: 1.25;
			color: rgb(var(--black));
			}

			.date {
			margin: 0;
			font-size: 0.9rem;
			color: rgb(var(--gray));
			}

			/* Mobile tweaks */
			@media (max-width: 520px) {
			main { padding: 1.75rem 1rem; }
			ul { gap: 1rem; }
			ul li a { padding: 0.85rem; }
			}

			ul li:first-child {
			grid-column: 1 / -1;
			}

			ul li:first-child img {
			height: 22rem;
			}

			ul li:first-child .title {
			font-size: 2rem;
			}


			ul {
			align-items: stretch;
			}

			/* Make the link fill the grid cell */
			ul li a {
			height: 100%;
			display: flex;
			flex-direction: column;
			}

			/* Standardize image area */
			ul li img {
			width: 100%;
			aspect-ratio: 16 / 9;   /* consistent */
			object-fit: cover;      /* crop nicely */
			display: block;
			border-radius: 12px;
			flex: 0 0 auto;
			}

			/* Standardize text area */
			.title {
			margin: 0;
			flex: 0 0 auto;

			display: -webkit-box;
			-webkit-line-clamp: 3;  /* pick 2 or 3 */
			-webkit-box-orient: vertical;
			overflow: hidden;
			}

			/* Keep date pinned to bottom for consistent rhythm */
			.date {
			margin-top: auto;
			}







