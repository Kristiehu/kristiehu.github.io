---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import ComplexType from "../components/ComplexType.astro";
import { Image } from "astro:assets";
import portrait from "../assets/me_0.png";
import { Github, Linkedin, FileText, Mail } from "lucide-astro";

const en = "Kristie Hu";
const zh = '静祎'
const PRONOUNCE = "/jing-yee hoo/";

const LINKS = [
  { label: "GitHub", href: "https://github.com/KristieHu" },
  { label: "Linkedin", href: "https://www.linkedin.com/in/kristiehu/" },
  { label: "Resume", href: "/Kristie-Hu-CV-2026.pdf" },
  { label: "Email", href: "mailto:kristieyet@gmail.com" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="wrap">
      <!-- HERO (same as About) -->
      <section class="hero">
        <Image
          src={portrait}
          alt="Kristie Hu portrait"
          width={200}
          height={200}
          sizes="200px"
          widths={[200, 400]}
          quality={95}
          class="portrait"
        />

        <div class="heroText">
          <h1 class="name">
            <span class ="en">{en}</span>
            <span class ="zh">{zh}</span>
            <span class="pronounce">{PRONOUNCE}</span>
          </h1>

          <div class="type">
            <ComplexType />
          </div>
          <p class="hero-quote-zh">
            不坠青云志，常怀赤子心。
          </p>

          <nav class="social" aria-label="External links">
            <a href="https://github.com/KristieHu" target="_blank" class="icon-link">
              <Github size={25} />
              <span class="tooltip">GitHub</span>
            </a>

            <a href="https://www.linkedin.com/in/kristiehu/" target="_blank" class="icon-link">
              <Linkedin size={25} />
              <span class="tooltip">LinkedIn</span>
            </a>

            <a href="/Kristie-Hu-CV-2026.pdf" class="icon-link">
              <FileText size={25} />
              <span class="tooltip">Resume</span>
            </a>

            <a href="mailto:kristieyet@gmail.com" class="icon-link">
              <Mail size={25} />
              <span class="tooltip">Email</span>
            </a>
          </nav>

           
        </div>
      </section>
      

        <!-- FOOTER NOTE -->
      <section class="hero-quote">
        <p class="hero-quote">
          I’m driven by location intelligence — turning spatial complexity into clarity people can act on.
        </p>
      </section>
      
    </main>

    <Footer />


    <style>

    .hero-quote{
      margin-top: clamp(6px, 1.6vw, 12px); 
      font-style: italic;
      opacity: 0.62;
      line-height: 1.55;
      font-size: clamp(1.05rem, 1.6vw, 1.25rem);
      text-align: center;
    }
    

    .hero-quote-zh {
      margin-top: 0.45rem;
      font-size: clamp(1.05rem, 1.4vw, 1.2rem);
      letter-spacing: 0.12em;          
      line-height: 1.6;
      opacity: 0.78;

      font-family: "Source Han Serif SC", "Noto Serif SC", "Songti SC", serif;
      font-weight: 400;
    }
    
      .name {
        font-size: 1.8em;
      }

    .en{
      font-family: "Inter Tight", system-ui, sans-serif;
      font-weight: 700;
      letter-spacing: -0.03em;
      line-height: 1.1;
      font-size: clamp(1.7rem, 3.5vw, 2.4rem);
    }

    .zh{
      /* letter-spacing: -0.02em;   */
 
      font-size: clamp(1.7rem, 3.5vw, 2.4rem);
      /* font-family: "Source Han Serif SC", "Noto Serif SC", "Songti SC", serif; */
      font-family: "Noto Sans SC", sans-serif;
      font-weight: 300;
      letter-spacing: 0.08em;


      font-weight: 400;
    }

      .pronounce {
        color: #000000;
        font-family: "Inter Tight", system-ui, sans-serif;
        font-weight: 300;
        font-style: italic;
        font-size: 0.45em;
        letter-spacing: -0.01em;
        opacity: 0.6;
        opacity: 0.45;
        
        
      }

      .type { 
        margin-top: 0.5rem;
        color:#3A5F8F;
      }

      .links { margin-top: 1.2rem; display: flex; flex-wrap: wrap; gap: 0.6rem; }
      .chip {
        position: relative;
        padding: 0.4rem 0.85rem;
        border-radius: 999px;
        font-size: 0.92rem;
        font-weight: 500;
        text-decoration: none;
        color: var(--black, #111);
        border: 1px solid rgba(0,0,0,0.25);
        background: transparent;
        transition:
          background-color 160ms ease,
          color 160ms ease,
          border-color 160ms ease,
          transform 120ms ease;
        padding: 0.42rem 0.9rem;
        border-radius: 12px;          
        font-size: 0.92rem;
        font-weight: 500;

        border: 1px solid rgba(58, 58, 58, 0.25);
        background: transparent;
        color: #111;
      }

	    .chip:hover {
        background: rgba(58, 95, 143, 0.08);
        border-color: rgba(58, 95, 143, 0.25);
        transform: translateY(-3px);
      }


      .chip:active {
        transform: translateY(0);
      }

    

      .section { margin-top: 1rem; }

      .hero-divider{
        width: min(680px, 92%);
        height: 1px;
        margin: clamp(14px, 2.8vw, 22px) auto;
        background: rgba(15, 23, 42, 0.12);   
      }






      .social {
  display: flex;
  gap: 20px;
  margin-top: 28px;
}

/* ICON LINK CONTAINER */
.icon-link {
  position: relative;
  color: #8c97a3;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: color 0.2s ease, transform 0.2s ease;
}

/* HOVER STATE */
.icon-link:hover {
  color: #3a5d90;
  transform: translateY(-1px);
}

/* TOOLTIP */
.tooltip {
  position: absolute;
  bottom: -26px;
  left: 50%;
  transform: translateX(-50%) translateY(6px);

  font-size: 11px;
  color: #7d8894;
  white-space: nowrap;

  opacity: 0;
  pointer-events: none;
  transition: all 0.18s ease;
}

/* SHOW ON HOVER */
.icon-link:hover .tooltip {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

@media (hover: none) {
  .tooltip {
    display: none;
  }
}




    </style>
  </body>
</html>
